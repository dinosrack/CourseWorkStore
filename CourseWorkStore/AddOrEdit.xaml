<Window x:Class="CourseWorkStore.AddOrEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWorkStore"
        mc:Ignorable="d"
        MinWidth="1280" MinHeight="720" WindowState="Maximized" Icon="AppIcons/AddOrEditIcon.png" Cursor="" >
    <Grid Background="#1E1E1E">
        <Border Background="#242424"
                Height="600"
                Width="500">
            <StackPanel Width="300" VerticalAlignment="Center">
                <TextBlock Text="Новая запись" x:Name="Header" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Таблица" x:Name="TableName" FontSize="16" Foreground="#A0A0A0" HorizontalAlignment="Center"/>
                <Border Margin="10"/>
                <StackPanel x:Name="MainArea" Width="200" HorizontalAlignment="Center">
                    <!--Тут генерируются поля-->
                </StackPanel>
                <Border Margin="10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="AddOrEditBtn" Click="AddOrEditBtn_Click" Width="100" Content="Добавить" Style="{StaticResource ButtonAdd}"/>
                        <Border Margin="10"/>
                        <Button x:Name="CancelBtn" Click="CancelBtn_Click" Width="100" Content="Отмена" Style="{StaticResource ButtonCancel}"/>
                    </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
