<Window x:Class="CourseWorkStore.MessageBoxes.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWorkStore.MessageBoxes"
        mc:Ignorable="d"
        Title="Восстановление пароля" Icon="/AppIcons/InfoIcon.png" Height="200" Width="400" ResizeMode="NoResize" WindowStyle="None">
    <Border BorderBrush="#4D96F7" BorderThickness="3">
        <Grid Background="#242424">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Обратитесь к Администратору информационной системы за помощью для восстановления пароля :)"
                    FontSize="16"
                    Foreground="White"
                    TextWrapping="Wrap"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextAlignment="Center"
                    MaxWidth="400"/>
                <Border Margin="10"/>
                <Button Content="Хорошо" Width="100" x:Name="Okay" Click="Okay_Click" Style="{StaticResource ButtonCancel}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
